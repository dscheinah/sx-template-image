{
    "name": "dscheinah/sx-template-image",
    "description": "Extends sx-template with support for images.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.1",
        "dscheinah/sx-container": "^1.0",
        "dscheinah/sx-image": "^1.1",
        "dscheinah/sx-template": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Sx\\Template\\Image\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sx\\TemplateTest\\Image\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
